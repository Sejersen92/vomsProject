@using Microsoft.AspNetCore.Identity
@using vomsProject.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject vomsProject.Helpers.DomainHelper domainHelper

@model PageOverview

@{ 
    var count = 1;
}

<div class="Solutions mb-3">
    <h3>Here are you pages:</h3>
    <div>
        <table class="table table-responsive table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Page name & link to page</th>
                    <th scope="col">Manage page</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var page in Model.Pages)
                {
                    var pagename = !string.IsNullOrWhiteSpace(page.PageName) ? page.PageName : "(Index page)"; 

                    <tr>
                        <th scope="row">@(count++)</th>
                        <td><a href="@domainHelper.GetPageUrl(page)" class="card-link">@(pagename)</a></td>
                        <td>@Html.ActionLink("Delete page", "RemovePage", "Admin", new { id = page.Id, solutionId = Model.SolutionId }, new { @class = "card-link" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="card m-2">
    <h5 class="card-title">Page-creation</h5>
    <h6 class="card-subtitle">In this section you can create new pages for your solution</h6>
    <div class="mb-3 mt-3 row justify-content-center">
        <form asp-action="CreatePage" asp-controller="Admin" method="post">
            <div class="input-group mb-2 mt-2">
                <label class="input-group-text">Enter the title of your page:</label>
                <input class="form-control" type="text" id="title" name="title" />
            </div>
            <div style="display: none">
                <input type="text" name="id" value="@Model.SolutionId" />
            </div>
            <input type="submit" value="Create page" class="btn btn-primary mb-3" />
        </form>
    </div>
</div>

<div class="card m-2">
    <h5 class="card-title">Solution-options</h5>
    <h6 class="card-subtitle mb-2">In this section you can add or remove user-access to this solution, and, if needed, delete this solution as well.</h6>
    <div class="card-body">
        <form asp-action="UpdateSolution" asp-controller="Admin" method="post">
            <div class="input-group mb-2 mt-2">
                <label class="input-group-text">Select a stylesheet:</label>
                <select name="stylesheet">
                    @foreach (var style in Model.StyleSheets)
                    {
                        if (Model.SelectedStyleId == style.Id)
                        {
                            <option value="@style.Id" selected>@style.Text</option>
                        }
                        else
                        {
                            <option value="@style.Id">@style.Text</option>
                        }
                    }
                </select>
            </div>
            <div style="display: none">
                <input type="text" name="solutionId" value="@Model.SolutionId" />
            </div>
            <input type="submit" value="submit" class="btn btn-primary mb-3" />
        </form>
        @if (Model.Solution != null)
        {
            <h5 class="card-title">Users</h5>
            @foreach (var permission in Model.Solution.Permissions)
            {
                <div class="m-2">
                    <h5 class="card-title mb-2">@permission.User.UserName</h5>
                    @Html.ActionLink("Remove", "RemoveUser", "Admin", new { id = permission.User.Id, solutionId = Model.SolutionId }, new { @class = "card-link" })
                </div>
            }
        }
        <h5 class="card-title mt-5">Add new user</h5>
        <form asp-action="AddUser" asp-controller="Admin" method="post">
            <div class="input-group mb-2 mt-2">
                <label class="input-group-text">Enter an email-address for a specific user:</label>
                <input class="form-control" type="email" id="userEmail" name="userEmail" />
            </div>
            <div style="display: none">
                <input type="text" name="solutionId" value="@Model.SolutionId" />
            </div>
            <input type="submit" value="submit" class="btn btn-primary mb-3" />
        </form>
    </div>
</div>